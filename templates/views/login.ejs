<!DOCTYPE html>
<html>

<head>
    <title>Login Form</title>
    <link rel="stylesheet" type="text/css" href="css/login.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <img class="wave" src="images/wave.png">
    <div class="container">
        <div class="img">
            <img src="images/bg.svg">
        </div>
        <div class="login-content">
            <form action="/login" method="POST">
                <img src="images/avatar.svg">
                <% if(typeof err !='undefined' ){ %>

                    <div class="alert alert-<%= typeof errType != 'undefined' ? errType : " warning" %>
                        alert-dismissible fade show" role="alert">
                        <strong>
                            <%= typeof errHead !='undefined' ? errHead : "Error!" %>
                        </strong><br>
                        <%= err %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% }%>
                        <% if(typeof err=='undefined' ){ %>

                            <h4>welcome home</h4>

                            <% }%>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div class="div">
                                        <h5>Phone</h5>
                                        <input class="input" type="phone" name="phone" id="phone">
                                    </div>
                                </div>
                                <div class="input-div pass">
                                    <div class="i">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <div class="div">
                                        <h5>Password</h5>
                                        <input class="input" type="password" name="password" id="password">
                                    </div>
                                </div>
                                <a href="/signup">not account?</a>
                                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
    <script type="text/javascript" src="js/mainlog.js"></script>
</body>

</html>




